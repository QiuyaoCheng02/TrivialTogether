<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:overview="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/nanjing"
        overview:layout_constraintBottom_toBottomOf="parent"
        overview:layout_constraintEnd_toEndOf="parent"
        overview:layout_constraintStart_toStartOf="parent"
        overview:layout_constraintTop_toTopOf="parent" />

    <com.example.trival.ThumbnailView
        android:id="@+id/frame_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        overview:layout_constraintBottom_toBottomOf="parent"
        overview:layout_constraintEnd_toEndOf="parent"
        overview:layout_constraintStart_toStartOf="parent"
        overview:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
